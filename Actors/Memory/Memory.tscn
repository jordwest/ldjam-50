	float brightness = radial_brightness - (noise_intensity * 0.2) + fill_progress;
	
	ALBEDO = img_col;
	ALPHA = smoothstep(1.0 - alpha, 1.0 - alpha +0.01, noise_intensity) * brightness * 2.0;
}"

