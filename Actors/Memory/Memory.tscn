	float noise_intensity2 = texture(noise, UV + vec2(TIME * 0.001, TIME * 0.02)).x;
	
	vec2 image_wavy_offset = vec2(noise_intensity2 * 0.07, noise_intensity2 * 0.09);
	
	vec3 img_col = texture(image, vec2(SCREEN_UV.x, 1.0 - SCREEN_UV.y) + image_wavy_offset).rgb;
